{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake --build . --config Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake --build . --target clean",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
} 